{
  "info": {
    "name": "CSV to JSON Converter API",
    "description": "API collection for testing CSV to JSON Converter with PostgreSQL",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/upload/health",
          "host": ["{{base_url}}"],
          "path": ["api", "upload", "health"]
        },
        "description": "Check if the API and database are healthy"
      }
    },
    {
      "name": "Process CSV File",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/upload/process",
          "host": ["{{base_url}}"],
          "path": ["api", "upload", "process"]
        },
        "description": "Process CSV file from configured location and upload to database"
      }
    },
    {
      "name": "Get Age Distribution Report",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/upload/report",
          "host": ["{{base_url}}"],
          "path": ["api", "upload", "report"]
        },
        "description": "Get age distribution statistics"
      }
    },
    {
      "name": "Get All Users",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/upload/users",
          "host": ["{{base_url}}"],
          "path": ["api", "upload", "users"]
        },
        "description": "Retrieve all users from the database"
      }
    },
    {
      "name": "Clear All Users",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/upload/users",
          "host": ["{{base_url}}"],
          "path": ["api", "upload", "users"]
        },
        "description": "Delete all users from the database"
      }
    },
    {
      "name": "Get API Info",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/",
          "host": ["{{base_url}}"],
          "path": [""]
        },
        "description": "Get API information and available endpoints"
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ]
}

